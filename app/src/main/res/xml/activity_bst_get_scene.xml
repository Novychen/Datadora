<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
        <OnClick motion:clickAction="toggle"
            motion:targetId="@id/BST_Activity_Get_Background"/>
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/BST_Activity_Get_Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toTopOf="@+id/BST_Activity_Get_Background"
            motion:layout_constraintEnd_toEndOf="@+id/BST_Activity_Get_Background"
            motion:layout_constraintBottom_toBottomOf="@+id/BST_Activity_Get_Background" />

        <Constraint
            android:id="@+id/BST_Activity_Get_ConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@+id/BST_Activity_Get_Background"
            motion:layout_constraintEnd_toEndOf="@+id/BST_Activity_Get_Background"
            motion:layout_constraintStart_toStartOf="@+id/BST_Activity_Get_Background"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/BST_Activity_Get_Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toTopOf="@+id/LinkedList_Activity_Add_Background"
            motion:layout_constraintEnd_toEndOf="@+id/LinkedList_Activity_Add_Background"
            motion:layout_constraintBottom_toBottomOf="@+id/LinkedList_Activity_Add_Background" />

        <Constraint
            android:id="@+id/BST_Activity_Get_ConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@+id/BST_Activity_Get_Background"
            motion:layout_constraintEnd_toEndOf="@+id/BST_Activity_Get_Background"
            motion:layout_constraintStart_toStartOf="@+id/BST_Activity_Get_Background" />
    </ConstraintSet>
</MotionScene>