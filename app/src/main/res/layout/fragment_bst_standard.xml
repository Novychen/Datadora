<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/BST_Fragment_Add"
                style="@style/Tree_Button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:text="@string/BST_Activity_Standard_Add"
                app:layout_constraintBottom_toBottomOf="@+id/BST_Fragment_Random"
                app:layout_constraintEnd_toStartOf="@+id/BST_Fragment_Random"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/BST_Fragment_Random" />

            <Button
                android:id="@+id/BST_Fragment_RandomTree"
                style="@style/Tree_Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:text="@string/BST_Activity_Standard_Random_tree"
                app:layout_constraintBottom_toBottomOf="@+id/BST_Fragment_Random"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/BST_Fragment_Random"
                app:layout_constraintTop_toTopOf="@+id/BST_Fragment_Random" />

            <Button
                android:id="@+id/BST_Fragment_Remove"
                style="@style/Tree_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/BST_Activity_Standard_Remove"
                app:layout_constraintEnd_toStartOf="@+id/BST_Fragment_Clear"
                app:layout_constraintStart_toStartOf="@+id/BST_Fragment_Add"
                app:layout_constraintTop_toBottomOf="@+id/BST_Fragment_Add" />

            <Button
                android:id="@+id/BST_Fragment_Random"
                style="@style/Tree_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/BST_Activity_Standard_Random"
                app:layout_constraintEnd_toStartOf="@+id/BST_Fragment_RandomTree"
                app:layout_constraintStart_toEndOf="@+id/BST_Fragment_Add"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/BST_Fragment_Clear"
                style="@style/Tree_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/All_Data_Activity_Text_Clear"
                app:layout_constraintEnd_toEndOf="@+id/BST_Fragment_RandomTree"
                app:layout_constraintStart_toEndOf="@+id/BST_Fragment_Remove"
                app:layout_constraintTop_toTopOf="@+id/BST_Fragment_Remove" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>