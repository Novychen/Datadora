<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/LinkedList_Fragment_Clear"
        style="@style/List_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/All_Data_Activity_Text_Clear"
        app:layout_constraintEnd_toEndOf="@+id/LinkedList_Fragment_Delete_First"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Delete_First"
        app:layout_constraintTop_toBottomOf="@+id/BST_Fragment_HasLeftChild" />

    <Button
        android:id="@+id/LinkedList_Fragment_Delete_First"
        style="@style/List_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/LinkedList_Activity_Delete_First"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Clear" />

    <Button
        android:id="@+id/LinkedList_Fragment_Delete_Last"
        style="@style/List_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/LinkedList_Activity_Delete_Last"
        app:layout_constraintEnd_toEndOf="@+id/LinkedList_Fragment_Delete_First"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Delete_First"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Delete_First" />

    <Button
        android:id="@+id/LinkedList_Fragment_Delete_At"
        style="@style/List_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/LinkedList_Activity_Delete_At"
        app:layout_constraintEnd_toEndOf="@+id/LinkedList_Fragment_Delete_First"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Delete_First"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Delete_Last" />

    <com.google.android.material.slider.Slider
        android:id="@+id/LinkedList_Fragment_Delete_Slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:theme="@style/AppTheme"
        android:value="0.0"
        android:valueFrom="-100.0"
        android:valueTo="100.0"
        app:labelBehavior="withinBounds"
        app:layout_constraintBottom_toBottomOf="@+id/LinkedList_Fragment_Delete_At"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Delete_At" />

</androidx.constraintlayout.widget.ConstraintLayout>