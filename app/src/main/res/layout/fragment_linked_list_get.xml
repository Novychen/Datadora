<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/LinkedList_Fragment_Predec"
        style="@style/Tree_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/LinkedList_Activity_Get_Predecessor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Size" />

    <Button
        android:id="@+id/LinkedList_Fragment_Size"
        style="@style/Tree_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/All_Data_Activity_Text_Size"
        app:layout_constraintEnd_toEndOf="@+id/LinkedList_Fragment_Predec"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Predec"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LinkedList_Fragment_Succ"
        style="@style/Tree_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/LinkedList_Activity_Get_Successor"
        app:layout_constraintEnd_toEndOf="@+id/LinkedList_Fragment_Predec"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Predec"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Predec" />

    <Button
        android:id="@+id/LinkedList_Fragment_Get_First"
        style="@style/Tree_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/LinkedList_Activity_Get_First"
        app:layout_constraintEnd_toEndOf="@+id/LinkedList_Fragment_Succ"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Succ"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Succ" />

    <Button
        android:id="@+id/LinkedList_Fragment_Get_Last"
        style="@style/Tree_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/LinkedList_Activity_Get_Last"
        app:layout_constraintEnd_toEndOf="@+id/LinkedList_Fragment_Get_First"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Get_First"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Get_First" />

    <TextView
        android:id="@+id/LinkedList_Fragment_Get_At"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/LinkedList_Activity_Get_At"
        android:textAppearance="@style/Text.Item"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Get_Last"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Get_Last" />

    <ImageButton
        android:id="@+id/LinkedList_Fragment_Get_Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="@+id/LinkedList_Fragment_Get_Slider"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LinkedList_Fragment_Get_Slider"
        app:layout_constraintTop_toTopOf="@+id/LinkedList_Fragment_Get_Slider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/LinkedList_Fragment_Get_Slider"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="50dp"
        android:theme="@style/AppTheme"
        android:value="0.0"
        android:valueFrom="-100.0"
        android:valueTo="100.0"
        app:labelBehavior="withinBounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/LinkedList_Fragment_Get_At"
        app:layout_constraintTop_toBottomOf="@+id/LinkedList_Fragment_Get_At" />

    <TextView
        android:id="@+id/LinkedList_Fragment_Get_Zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Slider_Default_Value"
        app:layout_constraintBottom_toBottomOf="@+id/LinkedList_Fragment_Get_Last"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LinkedList_Fragment_Get_First" />
</androidx.constraintlayout.widget.ConstraintLayout>