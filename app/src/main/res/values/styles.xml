<resources>
    <style name="Button">
        <item name="android:background">@drawable/background_list_item</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="Tree_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="List_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Pan_selected">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:background">@drawable/ic_pan_tool</item>

    </style>

    <style name="Pan_unselected">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:background">@drawable/ic_pan_tool</item>

    </style>

    <style name="Return">
        <item name="android:background">@drawable/background_return</item>
    </style>

    <style name="Text">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Item">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.TextBlock">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Detail">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Surface">
        <item name="android:background">@color/colorSurface</item>
    </style>

    <style name="Surface.Text">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Secondary">
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="Primary">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Primary.Text">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="Primary.Text.Return">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>